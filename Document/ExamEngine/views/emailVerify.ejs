<div class="row sudhanshu-margin">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="/account/email/verify" method="POST">
        <div class="d-flex justify-content-center user-name">
          <h1>Hi! <%=name %> </h1>
      </div>
      <div class="d-flex justify-content-center mt-3 mb-5">
        <%if(verified) { %> 
          <i class="fas fa-check-double fa-8x"></i>
        <% } else {%>
          <i class="fas fa-exclamation fa-8x"></i>
        <% } %>  
    </div>
    <div class="d-flex justify-content-center mt-3 mb-5">
      <p id="email-status"><%= statusText %> </p>
  </div>
        <%if(verified) { %> 
          <a href="/" class=" btn btn-primary btn-block"><%= buttonText %></a>
        <% } else {%>
          <button type="submit" class="btn btn-primary btn-block <%=buttonControl%>" ><%= buttonText %> </button>
        <% } %>
       
      </form>
      
    </div>
  </div>
</div>

