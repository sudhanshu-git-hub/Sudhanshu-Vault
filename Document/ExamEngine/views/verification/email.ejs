<div class="row sudhanshu-margin">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">Account Verification</h1>
        <%- include('../partials/messages.ejs')  %> 
        <div class="d-flex justify-content-center mt-3 mb-5">
            <i class="far fa-envelope fa-8x"></i>
        </div>
        <div>
            <p>Hi! <%= name %> </p>
        </div>
        <div class="d-flex justify-content-center mt-3 mb-5">
            <p class="text-uppercase">You need to verify your email address first</p>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <h4>Email is successfully send to your email address </h4>
        </div>
        <div class="d-flex justify-content-center mt-3 mb-5">
            <h4><%= email %> </h4>
        </div>
        <div class="d-flex justify-content-center mt-3 mb-5">
            <p class="text-uppercase"> Check Spam folder also</p>
        </div>
      </div>
    </div>
  </div>